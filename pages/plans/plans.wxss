/* pages/plans/plans.wxss */
.plan_manage{
        position: absolute;
        top:3px;
        left: 5px;
}
.displan {
        justify-content: center;
        display: flex;
}

.plan_mag {
        width: 30px;
        height: 30px;
}

.plan_title {
        font-size: 25px;
        color: darkorchid;
}

.plan_section {
        width: 90%;
        height: 100%;
        margin-left: 5%;
        margin-top: 15px;
        border: 1px dotted gray;
}

.plan_index {
        position: relative;
        font-size: 15px;
        color: black;
}

.plan_content {
        color: cornflowerblue;
}

.plan_status {
        position: absolute;
        zoom: 1;
        right: 0px;
}

.plan_time {
        margin-top: 5px;
        position: absolute;
        font-size: 10px;
        right: 0px;
        bottom: 5px;
}

.progress {
        text-align: center;
}

.porgress_title {
        color: deepskyblue;
}

.progress_value {
        color: red;
        font-size: 20px;
}

.selectDate {
        width: 100%;
        font-size: 14px;
        position: relative;
        bottom: 2px;
}

.picker {
        display: flex;
        align-items: center;
        justify-content: center;
}
